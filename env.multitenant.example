# Configuración para el sistema multitenant de WhatsApp

# Servidor
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/zenda-mvp
MONGODB_DATABASE=zenda-mvp

# Redis (requerido para multitenant)
# Opción 1: URL completa (recomendada para Redis Cloud)
REDIS_URL=redis://redis-17363.c345.samerica-east1-1.gce.redns.redis-cloud.com:17363

# Opción 2: Variables separadas (alternativa)
# REDIS_HOST=redis-17363.c345.samerica-east1-1.gce.redns.redis-cloud.com
# REDIS_PORT=17363
# REDIS_PASSWORD=tu_password_si_la_tienes
REDIS_DATABASE=0

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=1d

# WhatsApp (configuración general)
WHATSAPP_SESSION_NAME=zenda-session
WHATSAPP_MAX_RECONNECT_ATTEMPTS=5
WHATSAPP_RECONNECT_DELAY=5000

# Configuración específica para multitenant
WHATSAPP_MULTITENANT_ENABLED=true
WHATSAPP_QR_EXPIRY_SECONDS=300
WHATSAPP_SESSION_EXPIRY_SECONDS=86400

# WebSocket (opcional, para QR en tiempo real)
WS_PORT=3001
WS_CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
